<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include("./partials/head") %>

<body>
    <!-- Header -->
    <% if (locals.user !=undefined) { %>
        <%- include('./partials/headerLogueado') %>
    <% } else { %>
        <%- include('./partials/header') %>
    <% } %>

    <!-- Datos del usuario -->
    <section class="info-usuario container products-wrapper">
        <div class="row">
            <div class="img-container offset-3 col-2">
                <img src="/images/users/<%= userFound.foto %>" alt="Foto de perfil de <%= userFound.nombre %>">
            </div>
            <div class="data-container col-6">
                <div class="d-flex align-items-center ">
                    <h1 class="main-title">
                        <%= userFound.nombre %>
                            <a href="/users/edit/<%= userFound.id %>">
                            <i class="fas fa-cog"></i>
                            </a>
                    </h1>
                    <a class="btn mt-3 ml-4" href="">SEGUIR</a>
                </div>
                <div>
                    <ul class="">
                        <li><%= userFound.email %></li>
                        <li><%= userFound.productos.length %> productos</li>
                        <li>200 seguidores</li>
                        <li>300 comentarios</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
    <!-- /Datos del usuario -->

    <div class="col-12">
        <h2 class="products-title">Mis productos</h2>
    </div>

    <div class="container products-wrapper">
        <div class="row">
            <div class="col-12"></div>
            <% for (let i = 0; i < userFound.productos.length; i++) { %>
                <div class="col-12 col-sm-6 col-lg-3">
                    <section class="product-box">
                        <a href="/product/<%= userFound.productos[i].id %>">
                            <figure class="product-box_image">
                                <img src="/images/products/<%= userFound.productos[i].imagenProduct %>" alt="Imagen de <%= userFound.productos[i].nombreProduct %>">
                            </figure>
                            <article class="product-box_data">
                                <h2><%= userFound.productos[i].nombreProduct %></h2>
                                <p><%= userFound.productos[i].descripcionProduct %></p>
                                <p>Comentarios: </p>
                            </article>
                        </a>
                    </section>
                </div>
            <% } %>
        </div>
    </div>

    <!-- footer -->
    <%- include("./partials/footer") %>
    <!-- /footer -->
</body>
</html>
